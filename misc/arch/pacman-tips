# bring packages with their dependencies up-to-date
pacman -Syu

# check orphans
pacman -Qdt

# remove packages
pacman -Rs

# search for all packages named
pacman -Ss texlive

# get info on package before installing it
pacman -Si texlive-bin

# get list of installed packages
pacman -Qqe > installed_packages

# install packages from a list
pacman -S --needed - < installed_packages

# build and install locally built package (2 step)
makepkg -s
pacman -U some.pkg.tar.gz

# build and install packages from AUR
makepkg -si

# If you get an error
libutf8proc: /usr/lib/libutf8proc.so.2 exists in filesystem

# use
pacman -Suy --overwrite usr/lib/libutf8proc.so.2
