  installed=
  echo -n "checking zsh..." >&2

  [[ -e $HOME/.zshrc || -L $HOME/.zshrc ]] && {
    echo "found, not installing" >&2
  } || {
    installed="zshrc"
    [[ "$EXPERIMENTAL" = "yes" ]] \
      && { ln -s ${_SCRIPTDIR%bin}shells/zsh/zshrc.zsh ~/.zshrc; } \
      || { ln -s ${SCRIPT_DIR%bin}shells/zsh/zshrc.zsh $HOME/.zshrc; }
