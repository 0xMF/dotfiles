}

_bash
_config_misc
[[ "$1" = "--with-emacs" ]] && _emacs
_git

[[ "$EXPERIMENTAL" = "yes" ]] && {
  echo "installing EXPERIMENTAL features in $HOME for ksh on `uname`"
  echo " relative to ${_SCRIPTDIR}"
}

_lisp
_misc
_pal
_vim
_zsh

