  [[ -e $HOME/.zcompdump || -L $HOME/.zcompdump ]] && { :
  } || {
    [[ "$EXPERIMENTAL" = "yes" ]] \
      && { ln -s ${_SCRIPTDIR%bin}shells/zsh/zcompdump.zsh ~/.zcompdump; } \
      || { ln -s ${SCRIPT_DIR%bin}shells/zsh/zcompdump.zsh $HOME/.zcompdump; }
